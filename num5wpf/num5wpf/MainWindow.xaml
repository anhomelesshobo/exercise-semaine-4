<Window x:Class="num5wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:num5wpf"
        mc:Ignorable="d"
       x:Name="fenetre" Title="MainWindow" Height="450" Width="800" SizeChanged="update_change">
        
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Image x:Name="sonic1" Width="120" Height="150" Source="images/Sonic_144.png" ></Image>
        <Image x:Name="sonic2" Grid.Column="1" Width="120" Height="150" Source="images/sonic_2.png"></Image>
        <Image x:Name="sonic3" Grid.Column="1" Grid.Row="1" Width="120" Height="150" Source="images/sonic_4.png" ></Image>
        <Image x:Name="sonic4" Grid.Column="0" Grid.Row="1" Width="120" Height="150" Source="images/sonic_3.png" ></Image>
        </Grid>
</Window>
